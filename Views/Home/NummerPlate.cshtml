@{
    ViewData["Title"] = "Vehicle Information";
}

<h1>Vehicle Information</h1>
@* 
<form method="get" asp-controller="Home" asp-action="NummerPlate">
    <label for="registrationNumber">Enter Registration Number:</label>
    <input type="text" id="registrationNumber" name="registrationNumber" required />
    <button type="submit">Submit</button>
</form> *@

@if (Model != null)
{
    var vehicleData = Model as Newtonsoft.Json.Linq.JObject;

    <table class="table">
        <thead>
            <tr>
                <th>Property</th>
                <th>Value</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var property in vehicleData)
            {
                <tr>
                    <td>@property.Key</td>
                    <td>@property.Value</td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Buttons to toggle between Environment and Equipment -->
    <button id="btnEnvironment" onclick="window.location.href='/Home/Environment?registrationNumber=@Model.registration_number'">Environment</button>
    <button id="btnEquipment" onclick="window.location.href='/Home/Equipment?registrationNumber=@Model.registration_number'">Equipment</button>
    <button id="btnReset">Reset</button>

    <div id="vehicleDetails">
        <!-- This is where the data will be dynamically updated -->
        <div id="environmentSection" style="display:none;">
            <div id="environmentData"></div>
        </div>
        <div id="equipmentSection" style="display:none;">
            <div id="equipmentData"></div>
            <thead>
                <tr>
                    <th>Equipment</th>
                    <th>Quantity</th>
                </tr>
            </thead>
            <tbody>
                <!-- Equipment data will be appended here dynamically -->
            </tbody>
        </div>
    </div>
}
else
{
    <p>No vehicle data available.</p>
}
